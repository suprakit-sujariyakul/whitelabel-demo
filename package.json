{
	"name": "whitelabel-demo",
	"version": "0.0.1",
	"description": "Whitelabel demo monorepo with modular architecture",
	"type": "module",
	"scripts": {
	"postinstall": "pnpm run build:packages",
		"build:packages": "pnpm --filter '@shared/*' --filter '@core/*' --filter '@plugin/*' run build",
		
		"dev": "pnpm run dev:app:dev",
		"dev:app": "pnpm run dev:app:dev",
		"dev:app:dev": "ENV=dev pnpm --filter app dev",
		"dev:app:stag": "ENV=stag pnpm --filter app dev",
		"dev:app:prod": "ENV=prod pnpm --filter app dev",
		"dev:client-a": "pnpm run dev:client-a:dev",
		"dev:client-a:dev": "CLIENT=client-a ENV=dev pnpm --filter app dev",
		"dev:client-a:stag": "CLIENT=client-a ENV=stag pnpm --filter app dev",
		"dev:client-a:prod": "CLIENT=client-a ENV=prod pnpm --filter app dev",
		"dev:client-b": "pnpm run dev:client-b:dev",
		"dev:client-b:dev": "CLIENT=client-b ENV=dev pnpm --filter app dev",
		"dev:client-b:stag": "CLIENT=client-b ENV=stag pnpm --filter app dev",
		"dev:client-b:prod": "CLIENT=client-b ENV=prod pnpm --filter app dev",

		"build": "pnpm run build:app:dev", 
		"build:app": "pnpm run build:app:dev",
		"build:app:dev": "ENV=dev pnpm --filter app build",
		"build:app:stag": "ENV=stag pnpm --filter app build",
		"build:app:prod": "ENV=prod pnpm --filter app build",
		"build:client-a": "pnpm run build:client-a:dev",
		"build:client-a:dev": "CLIENT=client-a ENV=dev pnpm --filter app build",
		"build:client-a:stag": "CLIENT=client-a ENV=stag pnpm --filter app build",
		"build:client-a:prod": "CLIENT=client-a ENV=prod pnpm --filter app build",
		"build:client-b": "pnpm run build:client-b:dev",
		"build:client-b:dev": "CLIENT=client-b ENV=dev pnpm --filter app build",
		"build:client-b:stag": "CLIENT=client-b ENV=stag pnpm --filter app build",
		"build:client-b:prod": "CLIENT=client-b ENV=prod pnpm --filter app build",
		"build:all": "pnpm run build:all:dev",
		"build:all:dev": "pnpm run build:app:dev && pnpm run build:client-a:dev && pnpm run build:client-b:dev",
		"build:all:stag": "pnpm run build:app:stag && pnpm run build:client-a:stag && pnpm run build:client-b:stag",
		"build:all:prod": "pnpm run build:app:prod && pnpm run build:client-a:prod && pnpm run build:client-b:prod",

		"test": "pnpm run test:dev",
		"test:app": "pnpm run test:app:dev",
		"test:app:dev": "ENV=dev pnpm --filter app test",
		"test:app:stag": "ENV=stag pnpm --filter app test",
		"test:app:prod": "ENV=prod pnpm --filter app test",
		"test:client-a": "pnpm run test:client-a:dev",
		"test:client-a:dev": "CLIENT=client-a ENV=dev pnpm --filter app test",
		"test:client-a:stag": "CLIENT=client-a ENV=stag pnpm --filter app test",
		"test:client-a:prod": "CLIENT=client-a ENV=prod pnpm --filter app test",
		"test:client-b": "pnpm run test:client-b:dev",
		"test:client-b:dev": "CLIENT=client-b ENV=dev pnpm --filter app test",
		"test:client-b:stag": "CLIENT=client-b ENV=stag pnpm --filter app test",
		"test:client-b:prod": "CLIENT=client-b ENV=prod pnpm --filter app test",
		"test:all": "pnpm run test:all:dev",
		"test:all:dev": "pnpm run test:client-a:dev && pnpm run test:client-b:dev",
		"test:all:stag": "pnpm run test:client-a:stag && pnpm run test:client-b:stag",
		"test:all:prod": "pnpm run test:client-a:prod && pnpm run test:client-b:prod",

		"format": "pnpm --filter app format",
		"lint": "pnpm --filter app lint",
		"test:unit": "pnpm --filter app test:unit",
		"test:e2e": "pnpm --filter app test:e2e"
	},
	"devDependencies": {
		"prettier": "^3.4.2"
	},
	"dependencies": {
		"typescript": "^5.9.2"
	}
}